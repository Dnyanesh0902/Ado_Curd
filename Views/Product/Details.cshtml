@model MachineTest.Models.Product

@{
    ViewBag.Title = "Product Details";
}

<link href="~/Content/bootstrap.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow rounded-3">
        <div class="card-body">
            <h2 class="card-title mb-4 text-center">Product Details</h2>

            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Product ID</th>
                        <td>@Model.ProductId</td>
                    </tr>
                    <tr>
                        <th>Product Name</th>
                        <td>@Model.ProductName</td>
                    </tr>
                    <tr>
                        <th>Category Name</th>
                        <td>@Model.CategoryName</td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-center gap-3 mt-4">
                <a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
                <a href="@Url.Action("Edit", new { id = Model.ProductId })" class="btn btn-warning">Edit</a>
                <a href="@Url.Action("Delete", new { id = Model.ProductId })" class="btn btn-danger"
                   onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
            </div>
        </div>
    </div>
</div>
