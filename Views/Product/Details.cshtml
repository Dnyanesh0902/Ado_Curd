@model MachineTest.Models.Product

@{
    ViewBag.Title = "Product Details";
}

<h2>Product Details</h2>

<table class="table table-bordered">
    <tr>
        <th>Product ID</th>
        <td>@Model.ProductId</td>
    </tr>
    <tr>
        <th>Product Name</th>
        <td>@Model.ProductName</td>
    </tr>
    <tr>
        <th>Category Name</th>
        <td>@Model.CategoryName</td>
    </tr>
</table>

<a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
<a href="@Url.Action("Edit", new { id = Model.ProductId })" class="btn btn-warning">Edit</a>
<a href="@Url.Action("Delete", new { id = Model.ProductId })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
