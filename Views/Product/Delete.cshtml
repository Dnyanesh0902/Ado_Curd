@model MachineTest.Models.Product

@{
    ViewBag.Title = "Delete Product";
}

<link href="~/Content/bootstrap.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow rounded-3">
        <div class="card-body">
            <h2 class="card-title text-center text-danger mb-4">Delete Product</h2>

            <h5 class="text-center mb-4">Are you sure you want to delete this product?</h5>

            <dl class="row">
                <dt class="col-sm-3">Product Name:</dt>
                <dd class="col-sm-9">@Model.ProductName</dd>

                <dt class="col-sm-3">Category Name:</dt>
                <dd class="col-sm-9">@Model.CategoryName</dd>
            </dl>

            @using (Html.BeginForm("Delete", "Product", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.ProductId)

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>
