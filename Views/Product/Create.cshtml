@model MachineTest.Models.Product

@{
    ViewBag.Title = "Add Product";
}

<h2>Add Product</h2>

@using (Html.BeginForm("Create", "Product", FormMethod.Post))
{
    <div class="form-group">
        <label>Product Name</label>
        @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label>Category</label>
        @Html.DropDownListFor(m => m.CategoryId, ViewBag.Categories as SelectList, "-- Select Category --", new { @class = "form-control", required = "required" })
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
}
