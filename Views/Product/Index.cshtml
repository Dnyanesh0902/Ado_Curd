@model List<MachineTest.Models.Product>

@{
    ViewBag.Title = "Product List";
}


<link href="~/Content/bootstrap.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="mb-4">Product List</h2>

    <p>
        @Html.ActionLink("Create New Product", "Create", null, new { @class = "btn btn-success mb-3" })
    </p>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Category ID</th>
                <th>Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }, new { @class = "btn btn-sm btn-warning me-1" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ProductId }, new { @class = "btn btn-sm btn-danger me-1" })
                        @Html.ActionLink("Details", "Details", new { id = item.ProductId }, new { @class = "btn btn-sm btn-info" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item @(ViewBag.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pageNumber = 1 })">First</a>
            </li>
            <li class="page-item @(ViewBag.PageNumber <= 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pageNumber = ViewBag.PageNumber - 1 })">Previous</a>
            </li>
            <li class="page-item @(ViewBag.PageNumber >= ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pageNumber = ViewBag.PageNumber + 1 })">Next</a>
            </li>
            <li class="page-item @(ViewBag.PageNumber == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pageNumber = ViewBag.TotalPages })">Last</a>
            </li>
        </ul>
    </nav>

    <div class="mt-3">
        @Html.ActionLink("Go to Category", "Index", "MachineTest", null, new { @class = "btn btn-primary" })
    </div>
</div>
